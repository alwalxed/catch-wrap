{
  "name": "catch-wrap",
  "version": "1.0.0",
  "description": "A simple, type-safe error handling utility for TypeScript that eliminates try-catch boilerplate",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --format esm --format cjs --target node --minify && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "bun run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "error-handling",
    "try-catch",
    "promise",
    "async",
    "utilities",
    "type-safe",
    "result",
    "maybe",
    "either"
  ],
  "author": "Awa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alwalxed/catch-wrap.git"
  },
  "bugs": {
    "url": "https://github.com/alwalxed/catch-wrap/issues"
  },
  "homepage": "https://github.com/alwalxed/catch-wrap#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
